{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
    <h1>Liste des Événements</h1>
    <div class="row">
        {% for evenement in evenements %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{ asset('uploads/' ~ evenement.imageEve) }}" class="card-img-top" alt="Image de l'événement">
                    <div class="card-body">
                        <h5 class="card-title">{{ evenement.nomEve }}</h5>
                        <p class="card-text">{{ evenement.nbrMax }}</p>
                        <p class="card-text">{{ evenement.dateDeve | date('d/m/Y') }}</p>
                        <p class="card-text">{{ evenement.adresseEve }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}


